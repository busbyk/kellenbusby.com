---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 - Page Not Found">
  <div class="flex justify-center items-center flex-col gap-6 flex-grow">
    <h1 class="text-4xl">
      404 <span class="text-xl">Not Found</span>
    </h1>
    <p class="text-muted">The page you're looking for doesn't exist.</p>
    <a href="/" class="underline hover:no-underline">Go home</a>
  </div>
</Layout>
