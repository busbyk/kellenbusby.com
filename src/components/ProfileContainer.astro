---
interface Props {
  href: string;
  tooltip: string;
}

const { href, tooltip } = Astro.props;
---

<a
  href={href}
  class="relative rounded-full h-10 w-10 md:h-12 md:w-12 flex justify-center items-center"
>
  <div class="peer text-zinc-800 dark:text-zinc-100"><slot /></div>
  <div class="hidden md:block absolute bottom-0 peer-hover:translate-y-[115%] opacity-0 peer-hover:opacity-100 transition-all duration-200 pointer-events-none">
    <span class="whitespace-nowrap text-xs">{tooltip}</span>
  </div>
</a>
