---
import { cn } from '../lib/utils';

interface Props {
  heading?: string;
  class?: string;
}

const { heading, class: className } = Astro.props;
---

<div class={cn('py-12 md:py-20 flex flex-col items-center', className)}>
  <div class="w-full max-w-4xl flex flex-col gap-6 mx-auto">
    {heading && (
      <h1 class="text-4xl md:text-6xl font-extrabold">{heading}</h1>
    )}
    <slot />
  </div>
</div>
