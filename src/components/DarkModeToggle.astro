<button
  id="dark-mode-toggle"
  class="relative h-8 w-8 rounded-full bg-card border-border border transition-colors duration-200 ease-in-out hover:bg-muted/20 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary focus-visible:ring-offset-2 focus-visible:ring-offset-background overflow-hidden"
  aria-label="Toggle dark mode"
>
  <!-- Sun icon -->
  <div id="sun-icon" class="absolute inset-0 flex items-center justify-center transition-transform duration-300 ease-in-out">
    <svg class="h-5 w-5 text-foreground" fill="currentColor" viewBox="0 0 20 20">
      <path
        fill-rule="evenodd"
        d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"
        clip-rule="evenodd"
      />
    </svg>
  </div>

  <!-- Moon icon -->
  <div id="moon-icon" class="absolute inset-0 flex items-center justify-center transition-transform duration-300 ease-in-out">
    <svg class="h-5 w-5 text-foreground" fill="currentColor" viewBox="0 0 20 20">
      <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z" />
    </svg>
  </div>
</button>

<script>
  const toggle = document.getElementById('dark-mode-toggle');
  const sunIcon = document.getElementById('sun-icon');
  const moonIcon = document.getElementById('moon-icon');

  function updateIcons(isDark: boolean) {
    if (isDark) {
      sunIcon?.classList.add('-translate-x-full');
      sunIcon?.classList.remove('translate-x-0');
      moonIcon?.classList.add('translate-x-0');
      moonIcon?.classList.remove('translate-x-full');
    } else {
      sunIcon?.classList.remove('-translate-x-full');
      sunIcon?.classList.add('translate-x-0');
      moonIcon?.classList.remove('translate-x-0');
      moonIcon?.classList.add('translate-x-full');
    }
  }

  // Initialize on load
  const isDark = document.documentElement.classList.contains('dark');
  updateIcons(isDark);

  toggle?.addEventListener('click', () => {
    const isDark = document.documentElement.classList.toggle('dark');
    localStorage.setItem('theme', isDark ? 'dark' : 'light');
    updateIcons(isDark);
  });
</script>
