---
import { cn } from '../lib/utils';

interface Props {
  title: string;
  description: string;
  class?: string;
}

const { title, description, class: className } = Astro.props;
---

<div class={cn(className, 'flex flex-col border-t pt-4 px-4')}>
  <p class="font-bold text-lg">{title}</p>
  <div class="h-0.5 rounded-full bg-foreground/20 w-1/4 my-2"></div>
  <p class="text-justify">{description}</p>
</div>
